<UserControl x:Class="Datalagring_Inlamningsuppgift_1.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Datalagring_Inlamningsuppgift_1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox Name="customerList"/>
        <Button Name="customerSearchBtn" Width="400" Height="100" VerticalAlignment="Top" FontSize="50" Content="Sök" Click="customerSearchBtn_Click"/>
        <TextBox Name="customerSearchValue" Width="500" Height="100"></TextBox>
        <Button Name="customerAllBtn" Width="400" Height="100" VerticalAlignment="Bottom" FontSize="50" Content="Hämta alla kunder" Click="customerAllBtn_Click"/>
    </Grid>
</UserControl>
