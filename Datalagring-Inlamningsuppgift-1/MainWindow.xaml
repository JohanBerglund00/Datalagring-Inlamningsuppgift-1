<Window x:Class="Datalagring_Inlamningsuppgift_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Datalagring_Inlamningsuppgift_1"
        mc:Ignorable="d"
        Title="Inlämningsuppgift 1" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8,8"/>
            <RowDefinition Height="8,8"/>
            <RowDefinition Height="8,8"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10,10,10,10" Padding="30,10" FontSize="30">First Name:</TextBlock>

        <TextBox x:Name="firstNameText" Grid.Row="0" Width="700" Height="50" Margin="125,0,0,0" Padding="10,3,0,0" FontSize="30" />

        <TextBlock Grid.Row="1" Margin="10,10,10,10" Padding="30,10" FontSize="30">Last Name:</TextBlock>

        <TextBox x:Name="lastNameText" Grid.Row="1" Width="700" Height="50" Margin="125,0,0,0" Padding="10,3,0,0" FontSize="30" />

        <Button x:Name="submitButton" Grid.Row="2" Margin="350,15" FontSize="30" Content="Submit" Click="submitButton_Click" />
    </Grid>
</Window>
